@using BankingSystem.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BankingSystem</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    @RenderSection("Styles", required: false)
    <link rel="stylesheet" href="~/plugins/admin-lte/css/adminlte.min.css"/>
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
</head>
<body>
<div class="wrapper">
    <header>
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#" role="button">
                        <i class="fas fa-gear"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Logout" role="button">
                        <i class="fas fa-power-off"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
    </header>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <span class="brand-text font-weight-light">Bank A</span>
            </a>
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <span class="d-block text-white">
                        @User.Identity?.Name
                    </span>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Dashboard
                            </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Customers" asp-action="ManageIndividuals" class="nav-link">
                            <i class="fas fa-user nav-icon"></i>
                            <p>Manage Individuals</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Customers" asp-action="ManageOrganizations" class="nav-link">
                            <i class="fas fa-user-friends nav-icon"></i>
                            <p>Manage Organizations</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Transactions" asp-action="Withdrawal" class="nav-link">
                            <i class="fas fa-money-check nav-icon"></i>
                            <p>Withdraw Money</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Transactions" asp-action="Deposit" class="nav-link">
                            <i class="fas fa-money-check nav-icon"></i>
                            <p>Deposit Money</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FixedDeposits" asp-action="Index" class="nav-link">
                            <i class="fas fa-money-check nav-icon"></i>
                            <p>Fixed Deposits</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Reports" asp-action="BranchReport" class="nav-link">
                            <i class="nav-icon far fa-file-alt"></i>
                            <p> Transaction Reports </p>
                        </a>
                    </li>
                    @if (User.IsInRole(UserType.Manager.ToString()))
                    {
                        <li class="nav-item">
                            <a asp-controller="Reports" asp-action="LoanReport" class="nav-link">
                                <i class="nav-icon far fa-file-alt"></i>
                                <p> Loan Report </p>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>
    <main>
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>
    <!-- Main Footer -->
    <footer class="main-footer">
        <!-- Default to the left -->
        <strong>
            &copy; 2023 - BankingSystem
        </strong> All rights reserved.
    </footer>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
<script src="~/plugins/admin-lte/js/adminlte.min.js"></script>
</body>
</html>