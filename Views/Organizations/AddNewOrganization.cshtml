@model CreateOrganizationViewModel

@{
    ViewBag.Title = "Add New Organization";
    Layout = "BankLayout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewBag.Title</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-body">
                        <form asp-controller="Organizations" asp-action="AddNewOrganization" method="post">
                            <div class="form-group">
                                <label asp-for="RegNo"></label>
                                <input asp-for="RegNo" class="form-control"/>
                                <span asp-validation-for="RegNo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control"/>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CompanyEmail"></label>
                                <input asp-for="CompanyEmail" class="form-control"/>
                                <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <input asp-for="Type" class="form-control"/>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.NIC"></label>
                                <input asp-for="Owner.NIC" class="form-control"/>
                                <span asp-validation-for="Owner.NIC" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.Position"></label>
                                <input asp-for="Owner.Position" class="form-control"/>
                                <span asp-validation-for="Owner.Position" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.WorkEmail"></label>
                                <input asp-for="Owner.WorkEmail" class="form-control"/>
                                <span asp-validation-for="Owner.WorkEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.Position"></label>
                                <input asp-for="Owner.Position" class="form-control"/>
                                <span asp-validation-for="Owner.Position" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.FirstName"></label>
                                <input asp-for="Owner.FirstName" class="form-control"/>
                                <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.LastName"></label>
                                <input asp-for="Owner.LastName" class="form-control"/>
                                <span asp-validation-for="Owner.LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.DateOfBirth"></label>
                                <input asp-for="Owner.DateOfBirth" type="date" class="form-control"/>
                                <span asp-validation-for="Owner.DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner.Gender"></label>
                                <input asp-for="Owner.Gender" class="form-control"/>
                                <span asp-validation-for="Owner.Gender" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Create Organization with Individual</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>