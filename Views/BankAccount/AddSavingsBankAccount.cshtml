@model BankingSystem.ViewModels.AddBankAccountViewModel

@{
    ViewBag.Title = "Add New Bank Account";
    Layout = "BankLayout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>New Bank Account</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="#">Individuals</a>
                    </li>
                    <li class="breadcrumb-item active">Add New Customer</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-action="AddSavingsAccount" method="POST"> <!-- Update action attribute accordingly -->
            <div class="row">
                <!-- Customer Information -->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Add New Savings Account</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="NicOrRegNo">Customer Identification</label>
                                <input asp-for="NicOrRegNo" class="form-control" disabled required>
                            </div>
                            <div class="form-group">
                                <label asp-for="SavingsPlanId">Select Savings Plan</label>
                                <select asp-for="SavingsPlanId" asp-items="Model.SavingsPlans" class="form-control">
                                    <option value="">-- Select a Savings Plan --</option>
                                </select>
                            </div>
                            <div class="form-check">
                                <input asp-for="WantDebitCard" class="form-check-input" />
                                <label asp-for="WantDebitCard" class="form-check-label">Want Debit Card</label>
                            </div>
                        </div>
                        <div class="card-footer">
                            <!--- Add your submit button here -->
                            <input asp-for="CustomerId" hidden>
                            <input type="submit" class="btn btn-success float-right" value="Add Savings Account" />
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Contact Information</h3>
                        </div>
                        <div class="card-body">
                            <!-- Add your contact information fields here -->
                            <!-- For example, Email, Mobile Phone Number, etc. -->
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- /.content -->
